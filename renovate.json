{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "npm",
    "docker-compose"
  ],
  "baseBranches": [
    "development"
  ],
  "ignorePaths": [
    ".github",
    ".husky",
    "public/**",
    ".nvmrc"
  ],
  "minimumReleaseAge": "3 days",
  "abandonmentThreshold": "2 years",
  "rangeStrategy": "pin",
  "schedule": [
    "0 0 * * 0"
  ]
}