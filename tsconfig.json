{
  "compilerOptions": {
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "types",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/[...slug].tsx",
    ".next/types/**/*.ts",
    "components/abstract.js",
    "utils.js"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "./cypress.config.ts",
    "**/cypress.config.ts"
  ]
}
